@model IEnumerable<BookWorm.Web.Features.Shared.CategoryMenu.CategoryDto>
@using Bolt.Common.Extensions;

<section class="category-menu">
    <nav>
        @foreach (var item in Model)
        {
            <a href="/books/@(item.Name.ToSlug())"><span>@item.Name</span><span class="count">@item.Count</span></a>
        }
    </nav>
</section>