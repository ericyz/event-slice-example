@model BookWorm.Web.Features.Details.DetailsViewModel
@section Styles{
    <link rel="stylesheet" type="text/css" href="/public/home-page.css"></link>
}
@section Scripts{
    <script src="/public/home-page.js"></script>
}
@section Title{
    <title>Welcome - Bookworm</title>
}
<div class="page-shell">
    <section class="two-col">
        <section class="col-1">
            @await Component.InvokeAsync("CategoryMenu")
        </section>
        <section class="col-2">
            <h2>@Model.Title</h2>
            <p>@Model.Details</p>
            <img src="@Model.Image"/>
        </section>
    </section>
</div>
